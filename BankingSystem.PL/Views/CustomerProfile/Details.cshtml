@using BankingSystem.PL.ViewModels.Customer
@model CustomerProfileViewModel
@{
    ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="/css/CustomerHome.css"/>
<div class="profile-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h2 class="mb-2">Welcome back, @Model.DesiredCustomer.FirstName @Model.DesiredCustomer.LastName !</h2>
        <p class="mb-0">We're glad to see you again.</p>
    </div>

    <!-- Customer Details -->
    <div class="customer-details">
        <div class="card shadow-sm">
            <div class="card-body p-3">
                <!-- Profile Header -->
                <div class="profile-header">
                    <h4 class="mb-0">Personal Information</h4>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="CustomerProfile" asp-route-id="@Model.DesiredCustomer.Id">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </a>
                </div>

                <!-- Details Grid -->
                <div class="row g-3">
                    <!-- Full Name -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-person"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Full Name</div>
                                <div class="detail-value">@Model.DesiredCustomer.FirstName @Model.DesiredCustomer.LastName</div>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Email Address</div>
                                <div class="detail-value">@Model.DesiredCustomer.Email</div>
                            </div>
                        </div>
                    </div>

@*                     <!-- SSN -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">SSN</div>
                                <div class="detail-value">@Model.DesiredCustomer.SSN</div>
                            </div>
                        </div>
                    </div> *@

                    <!-- Phone -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-telephone"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Phone Number</div>
                                <div class="detail-value">@Model.DesiredCustomer.PhoneNumber</div>
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-geo-alt"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Address</div>
                                <div class="detail-value">@Model.DesiredCustomer.Address</div>
                            </div>
                        </div>
                    </div>

                    <!-- Birth Date -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-calendar-date"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Birth Date</div>
                                <div class="detail-value">@Model.DesiredCustomer.BirthDate.ToShortDateString()</div>
                            </div>
                        </div>
                    </div>

                    <!-- Join Date -->
                    <div class="col-md-4">
                        <div class="detail-card d-flex align-items-center">
                            <div class="detail-icon">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Join Date</div>
                                <div class="detail-value">@Model.DesiredCustomer.JoinDate.ToShortDateString()</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Cards -->
    <div class="row g-4">


        <!-- Balance Card -->
        <div class="col-md-3">
            <div class="card info-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-wallet2 card-icon mb-3"></i>
                    <h5 class="card-title">Current Balance</h5>
                    <h2 class="mb-3 text-primary">$ @Model.TotalBalance</h2>
                    <p class="card-text text-muted mb-3">Across all accounts</p>
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-plus-circle me-2"></i>Open New Account
                    </button>
                    <a class="btn btn-outline-primary w-100" asp-controller="CustomerAccounts" asp-action="Details" asp-route-id="@Model.DesiredCustomer.Id">
                        <i class="bi bi-plus-circle me-2"></i>Accounts Details
                    </a>
                </div>
            </div>
        </div>


        <!-- Cards Card -->
        <div class="col-md-3">
            <div class="card info-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-credit-card card-icon mb-3"></i>
                    <h5 class="card-title">Your Cards</h5>
                    <h2 class="mb-3 text-primary">@Model.CardsCount</h2>
                    <p class="card-text text-muted mb-3">@Model.CreditCardsCount Credit, @Model.DebitCardsCount Debit</p>
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-plus-circle me-2"></i>Add New Card
                    </button>
                    <a class="btn btn-outline-primary w-100" asp-controller="CustomerCards" asp-action="Details" asp-route-id="@Model.DesiredCustomer.Id">
                        <i class="bi bi-plus-circle me-2"></i>Cards Details
                    </a>
                </div>
            </div>
        </div>

        <!-- Loans Card -->
        <div class="col-md-3">
            <div class="card info-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin card-icon mb-3"></i>
                    <h5 class="card-title">Active Loans</h5>
                    <h2 class="mb-3 text-primary">@Model.LoansCount</h2>
                    <p class="card-text text-muted mb-3"> <br /></p>
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-plus-circle me-2"></i>Add New Loan
                    </button>
                    <a class="btn btn-outline-primary w-100" asp-controller="CustomerLoans" asp-action="Details" asp-route-id="@Model.DesiredCustomer.Id">
                        <i class="bi bi-plus-circle me-2"></i>Loans Details
                    </a>
                </div>
            </div>
        </div>

        <!-- Certificates -->
        <div class="col-md-3">
            <div class="card info-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-credit-card card-icon mb-3"></i>
                    <h5 class="card-title">Certificates</h5>
                    <h2 class="mb-3 text-primary">@Model.CertificatesCount</h2>
                    <p class="card-text text-muted mb-3">  <br /> </p>
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-plus-circle me-2"></i>Add New Certificate
                    </button>
                    <a class="btn btn-outline-primary w-100" asp-controller="CustomerCertificate" asp-action="Details" asp-route-id="@Model.DesiredCustomer.Id">
                        <i class="bi bi-plus-circle me-2"></i>Cards Details
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.AccountsCount > 0)
    {
        <!-- Account Summary - Modernized -->
        <div class="mt-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="section-header">
                        <h4 class="mb-0">Account Summary</h4>
                    </div>

                    <div class="row g-4">
                        @foreach (var acc in Model.Account)
                        {
                            <div class="col-md-6">
                                <div class="account-card">
                                    <div class="account-details">
                                        <div class="account-icon">
                                            <i class="bi bi-wallet2"></i>
                                        </div>
                                        <h5>@acc.AccountType Account</h5>
                                        <div class="account-balance text-primary">$@acc.Balance</div>
                                        <div class="account-number text-black fw-bold">Account# : @acc.Number</div>
                                        <div class="account-actions">
@*                                             <button class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-arrow-left-right me-1"></i>Transfer
                                            </button> *@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Support Section -->
    <div class="support-section mt-4">
        <div class="card shadow-sm">
            <div class="card-body text-center py-4">
                <i class="bi bi-headset card-icon mb-3"></i>
                <h4 class="mb-3">Need Help?</h4>
                <p class="text-muted mb-4">Our support team is ready to assist you with any questions or issues you may have.</p>
                <a href="#support" class="btn btn-primary px-4 py-2">
                    <i class="bi bi-ticket-detailed me-2"></i>Get Help
                </a>
                <a asp-controller="CustomerSupportTickets" asp-action="Details" asp-route-id="@Model.DesiredCustomer.Id" class="btn btn-primary px-4 py-2">
                    <i class="bi bi-ticket-detailed me-2"></i>Show Support Tickets
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="mt-4 pt-3 border-top text-center text-muted">
        <small>&copy; 2025 SecureBank. All rights reserved.</small>
    </div>
</div>
