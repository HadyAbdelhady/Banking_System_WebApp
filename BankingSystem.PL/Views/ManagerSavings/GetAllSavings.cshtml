@model List<SavingsViewModel>
@{
    ViewData["Title"] = "Savings Management";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<button class="btn btn-primary Add-btn">Add Currency</button>

<table class="table" id="savingsTable">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-saving-id="@item.Id">
                <td class="currency-cell">@item.Currency</td>
                <td class="balance-cell">@item.Balance</td>
                <td><button class="btn btn-primary edit-btn">Edit</button></td>
            </tr>
        }

        <!-- Form Row with ID for targeting -->
        <tr id="addFormRow" class="d-none">
            <form id="addForm" asp-action="AddSaving" method="post">
            <td class="currency-cell">
                <input type="text" name="Currency" class="form-control" placeholder="Enter Currency" required />
            </td>
            <td class="balance-cell">
                <input type="number" name="Balance" class="form-control" placeholder="Enter Balance" required />
            </td>
            <td>
                <button type="submit" class="btn btn-primary">Add</button>
            </td>
            </form>
        </tr>
    </tbody>
</table>

<!-- Hidden form for updates -->
<form id="updateForm" asp-action="UpdateSaving" method="post">
    <input type="hidden" name="Id" id="savingId" />
    <input type="hidden" name="Currency" id="savingCurrency" />
    <input type="hidden" name="Balance" id="savingBalance" />
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/js/ManagerSaving.js"></script>
}