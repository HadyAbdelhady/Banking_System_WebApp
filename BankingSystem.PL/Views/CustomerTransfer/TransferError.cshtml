@model BankingSystem.PL.ViewModels.Customer.TransactionErrorViewModel

@{

    ViewData["Title"] = "Transfer Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Transaction Failed</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger mb-4">
                        <h5 class="alert-heading">@Model.FailureReason</h5>
                        <p class="mb-0">@Model.ErrorMessage</p>
                    </div>

                    <div class="transaction-details mb-4">
                        <h5>Transaction Details</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th scope="row">Reference ID</th>
                                    <td>@Model.TransactionId</td>
                                </tr>
                                <tr>
                                    <th scope="row">Amount</th>
                                    <td>@(Model.Amount > 0 ? $"{Model.Amount:C}" : "N/A")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Date/Time</th>
                                    <td>@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="resolution-section mb-4">
                        <h5>Suggested Resolution</h5>
                        <p>@Model.ResolutionSuggestion</p>
                    </div>

                    <div class="contact-info p-3 bg-light rounded">
                        <h6><i class="fas fa-headset me-2"></i>Need help?</h6>
                        <p class="mb-0">
                            Please contact our support team at <strong>support@bankingsystem.com</strong>
                            or call <strong>1-800-BANKING</strong> for assistance.
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-home me-2"></i>Return to Dashboard
                        </a>
                        <a asp-controller="CustomerTransfer" asp-action="TransferMoney" class="btn btn-primary">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>