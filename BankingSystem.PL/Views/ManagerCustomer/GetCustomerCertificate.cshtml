@model List<BankingSystem.PL.ViewModels.Manager.CertificateDetail>

@{
    ViewData["Title"] = "Customer Certificates";
    var customerId = ViewBag.CustomerId as string;
}

<h1>Customer Certificates</h1>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var certificate in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Certificate #@certificate.CertificateNumber</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">
                                Certificate Number
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.CertificateNumber
                            </dd>
                            <dt class="col-sm-4">
                                Account Number
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.AccountNumber
                            </dd>
                            <dt class="col-sm-4">
                                Issue Date
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.IssueDate.ToString("dd MMM yyyy")
                            </dd>

                            <dt class="col-sm-4">
                                Expiry Date
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.ExpiryDate.ToString("dd MMM yyyy")
                            </dd>

                            <dt class="col-sm-4">
                                Amount
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.Amount.ToString("C")
                            </dd>

                            <dt class="col-sm-4">
                                Interest Rate
                            </dt>
                            <dd class="col-sm-8">
                                @certificate.InterestRate%
                        </dl>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
}
else
{
    <p>No certificates found for this customer.</p>
}

<div>
    <a asp-controller="ManagerCustomer" asp-action="GetCustomerDetails" asp-route-id="@customerId" class="btn btn-secondary mt-3">
        Back
    </a>
</div>
