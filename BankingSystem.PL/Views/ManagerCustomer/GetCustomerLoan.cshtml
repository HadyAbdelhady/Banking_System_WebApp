@model List<BankingSystem.PL.ViewModels.Manager.LoanViewModel>

@{
    ViewData["Title"] = "Customer Loans";
    var customerId = ViewBag.CustomerId as string;
}

<style>
    :root {
        --primary-dark: #2c3e50;
        --primary-light: #ecf0f1;
        --accent-primary: #3498db;
        --accent-primary-hover: #2980b9;
        --accent-secondary: #7f8c8d;
        --accent-secondary-hover: #6c7a7d;
        --text-primary: #2c3e50;
        --text-light: #ecf0f1;
        --success: #2ecc71;
        --warning: #f1c40f;
        --danger: #e74c3c;
        --border-radius: 12px;
        --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        --card-padding: 1.5rem;
    }

    .loans-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .loans-header {
        text-align: center;
        margin-bottom: 2rem;
        color: var(--text-primary);
    }

        .loans-header h1 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .loans-header p {
            color: var(--accent-secondary);
        }

    .loan-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        margin-bottom: 1.5rem;
        border: none;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

        .loan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .loan-card-header {
        background: linear-gradient(135deg, var(--primary-dark), var(--accent-primary));
        color: var(--text-light);
        padding: 1rem var(--card-padding);
        border-bottom: none;
    }

    .loan-card-title {
        margin: 0;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .loan-card-body {
        padding: var(--card-padding);
    }

    .loan-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .loan-info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .loan-label {
        font-weight: 600;
        color: var(--primary-dark);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .loan-value {
        color: var(--text-primary);
        font-size: 1.1rem;
        padding: 0.5rem;
        background: var(--primary-light);
        border-radius: 6px;
    }

    .status-badge {
        display: inline-block;
        padding: 0.35rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background-color: var(--success);
        color: white;
    }

    .status-pending {
        background-color: var(--warning);
        color: var(--text-primary);
    }

    .status-overdue {
        background-color: var(--danger);
        color: white;
    }

    .payments-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 1.5rem;
    }

        .payments-table th {
            background: var(--primary-dark);
            color: var(--text-light);
            padding: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .payments-table td {
            padding: 0.75rem;
            border-bottom: 1px solid var(--primary-light);
        }

        .payments-table tr:last-child td {
            border-bottom: none;
        }

        .payments-table tr:hover {
            background-color: var(--primary-light);
        }

    .back-button {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn-back {
        background-color: var(--accent-secondary);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: var(--border-radius);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-back:hover {
            background-color: var(--accent-secondary-hover);
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .icon {
        margin-right: 0.5rem;
    }

    .no-loans {
        background: var(--primary-light);
        border-left: 4px solid var(--accent-primary);
        color: var(--text-primary);
        padding: 1.5rem;
        border-radius: var(--border-radius);
        text-align: center;
        margin: 2rem 0;
    }
</style>

<div class="loans-container">
    <div class="loans-header">
        <h1><i class="fas fa-hand-holding-usd icon"></i>Customer Loans</h1>
        <p>View and manage customer's loan accounts</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var loan in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                    <div class="loan-card">
                        <div class="loan-card-header">
                            <h5 class="loan-card-title">
                                <i class="fas fa-file-invoice-dollar"></i>
                                @loan.LoanType
                            </h5>
                        </div>
                        <div class="loan-card-body">
                            <div class="loan-info-grid">
                                <div class="loan-info-item">
                                    <span class="loan-label">Account #</span>
                                    <span class="loan-value">@loan.AccountNumber</span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Amount</span>
                                    <span class="loan-value">@loan.LoanAmount.ToString("C")</span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Status</span>
                                    <span class="status-badge @(loan.LoanStatus == "Active" ? "status-active" : loan.LoanStatus == "Pending" ? "status-pending" : "status-overdue")">
                                        @loan.LoanStatus
                                    </span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Start Date</span>
                                    <span class="loan-value">@loan.StartDate.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Current Debt</span>
                                    <span class="loan-value">@loan.CurrentDebt.ToString("C")</span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Interest Rate</span>
                                    <span class="loan-value">@loan.InterestRate%</span>
                                </div>
                                <div class="loan-info-item">
                                    <span class="loan-label">Duration</span>
                                    <span class="loan-value">@loan.DurationInMonth months</span>
                                </div>
                            </div>


                            @if (loan.Payments.Any())
                            {
                                <h6 class="loan-label mb-3">Payment History</h6>
                                <table class="payments-table">
                                    <thead>
                                        <tr>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in loan.Payments)
                                        {
                                            <tr>
                                                <td>@payment.Amount.ToString("C")</td>
                                                <td>
                                                    <span class="status-badge @(payment.Status == "Paid" ? "status-active" : payment.Status == "Pending" ? "status-pending" : "status-overdue")">
                                                        @payment.Status
                                                    </span>
                                                </td>
                                                <td>@payment.PaymentDate.ToString("dd MMM yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="alert alert-danger">No Payments</p>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-loans">
            <i class="fas fa-info-circle icon"></i> No loans found for this customer.
        </div>
    }

    <div class="back-button">
        <a asp-controller="ManagerCustomer"
           asp-action="GetCustomerDetails"
           asp-route-id="@customerId"
           class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to Customer Details
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}