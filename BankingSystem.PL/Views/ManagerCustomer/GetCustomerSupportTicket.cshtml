@model List<BankingSystem.PL.ViewModels.Manager.CustomerSupportTicketViewModel>

@{
    ViewData["Title"] = "Support Tickets";
    var customerId = ViewBag.CustomerId as string;
}

<!-- Add this line to include the custom CSS -->
<link rel="stylesheet" href="~/css/customer-details.css" />

<h2>Support Tickets</h2>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h4>Ticket: @ticket.Title</h4>
                        </div>
                        <div class="card-body">
                            <dl class="ticket-details">
                                <div class="ticket-detail-item">
                                    <dt>Account Number</dt>
                                    <dd>@ticket.AccountNumber</dd>
                                </div>

                                <div class="ticket-detail-item">
                                    <dt>Description</dt>
                                    <dd>@ticket.Description</dd>
                                </div>

                                <div class="ticket-detail-item">
                                    <dt>Date</dt>
                                    <dd>@ticket.Date.ToString("yyyy-MM-dd")</dd>
                                </div>

                                <div class="ticket-detail-item">
                                    <dt>Status</dt>
                                    <dd><span class="ticket-status @ticket.Status">@ticket.Status</span></dd>
                                </div>

                                <div class="ticket-detail-item">
                                    <dt>Type</dt>
                                    <dd>@ticket.Type</dd>
                                </div>

                                <div class="ticket-detail-item">
                                    <dt>Response</dt>
                                    <dd>@(string.IsNullOrEmpty(ticket.Response) ? "No response yet" : ticket.Response)</dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No support tickets found.</p>
        </div>
    }

    <a asp-controller="ManagerCustomer" asp-action="GetCustomerDetails" asp-route-id="@customerId" class="btn btn-secondary mt-3">
        Back
    </a>
</div>



<style>
    /* Add these styles to your existing customer-details.css file */

    /* Support Ticket Definition List Styling */
    .ticket-details {
        margin: 0;
        padding: 0;
    }

    .ticket-detail-item {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--accent-2);
    }

        .ticket-detail-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .ticket-details dt {
        flex: 0 0 40%;
        font-weight: 600;
        color: var(--primary-dark);
        padding-right: 1rem;
    }

    .ticket-details dd {
        flex: 0 0 60%;
        margin: 0;
        color: var(--header);
    }

    /* Ticket Status Styling */
    .ticket-status {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
    }

        .ticket-status.open,
        .ticket-status.pending {
            background-color: var(--btn-m);
            color: var(--header);
        }

        .ticket-status.closed,
        .ticket-status.resolved {
            background-color: var(--accent-3);
            color: var(--primary-dark);
        }

        .ticket-status.inprogress,
        .ticket-status.in-progress {
            background-color: var(--primary-medium);
            color: var(--white);
        }

    /* Empty State Styling */
    .empty-state {
        background-color: var(--primary-light);
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        margin-bottom: 2rem;
    }

        .empty-state p {
            font-size: 1.1rem;
            color: var(--primary-dark);
            margin: 0;
        }


    .ticket-details dt {
        flex: 0 0 100%;
        margin-bottom: 0.25rem;
    }

    .ticket-details dd {
        flex: 0 0 100%;
    }

    .ticket-detail-item {
        padding-bottom: 1rem;
        margin-bottom: 1rem;
    }

    }
</style>
