@using System.Security.Claims
@model BankingSystem.PL.ViewModels.Manager.TellerDetailsViewModel

@{
    ViewData["Title"] = "Delete Teller";
    var ManagerId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
}

<h2>Delete Teller</h2>

<div class="card">
    <div class="card-body">
        <p> <strong>Teller Name:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Branch:</strong> @Model.BranchName</p>
        <p><strong>Department:</strong> @Model.DepartmentName</p>
        <p><strong>SSN:</strong> @Model.SSN</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Join Date:</strong> @Model.JoinDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Birth Date:</strong> @Model.BirthDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Salary:</strong> @Model.Salary</p>
    </div>
</div>

<h3>Are you sure you want to delete this teller?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to List", "GetAllTellers", new { id = ManagerId }, new { @class = "btn btn-secondary" })
    </div>
}

