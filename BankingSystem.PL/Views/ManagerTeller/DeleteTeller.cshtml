@using System.Security.Claims
@model BankingSystem.PL.ViewModels.Manager.TellerDetailsViewModel

@{
    ViewData["Title"] = "Delete Teller";
    var ManagerId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
}

<style>
    :root {
        --primary-dark: rgb(63, 114, 175); /* new primary dark */
        --primary-medium: rgb(157, 178, 191); /* new primary medium */
        --primary-light: rgb(219, 226, 239); /* new primary light */
        --secondary-dark: rgb(63, 114, 175); /* mapped to primary-dark because no exact secondary */
        --secondary-light: rgb(219, 226, 239); /* mapped to primary-light */
        --neutral-1: rgb(157, 178, 191); /* mapped to text-light */
        --accent-1: rgb(63, 114, 175); /* mapped to primary-dark */
        --accent-2: rgb(221, 230, 237); /* primary-lightest */
        --accent-3: rgb(238, 244, 255); /* soft background you used */
        --white: #ffffff; /* stays same */
        --danger: #dc3545;
    }

    .delete-container {
        background: var(--primary-dark);
        color: var(--accent-3);
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        padding: 2rem;
        max-width: 800px;
        margin: 2rem auto;
    }

    .delete-header {
        color: var(--accent-1);
        border-bottom: 2px solid var(--accent-1);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .teller-card {
        background: var(--primary-medium);
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: var(--accent-3);
    }

    .teller-detail {
        display: flex;
        margin-bottom: 0.75rem;
        align-items: center;
    }

    .detail-label {
        font-weight: 600;
        color: var(--accent-2);
        min-width: 120px;
    }

    .detail-value {
        color: var(--white);
    }

    .confirmation-text {
        color: var(--accent-2);
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.2rem;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background-color: var(--danger);
        border: none;
        padding: 0.75rem 2rem;
        min-width: 150px;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: var(--neutral-1);
        border: none;
        padding: 0.75rem 2rem;
        min-width: 150px;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-container">
    <h2 class="delete-header">
        <i class="fas fa-user-slash me-2"></i>Delete Teller
    </h2>

    <div class="teller-card">
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-user me-2"></i>Teller Name:</span>
            <span class="detail-value">@Model.FirstName @Model.LastName</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-envelope me-2"></i>Email:</span>
            <span class="detail-value">@Model.Email</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-phone me-2"></i>Phone:</span>
            <span class="detail-value">@Model.PhoneNumber</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-building me-2"></i>Branch:</span>
            <span class="detail-value">@Model.BranchName</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-users me-2"></i>Department:</span>
            <span class="detail-value">@Model.DepartmentName</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-id-card me-2"></i>SSN:</span>
            <span class="detail-value">@Model.SSN</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-map-marker-alt me-2"></i>Address:</span>
            <span class="detail-value">@Model.Address</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-calendar-day me-2"></i>Join Date:</span>
            <span class="detail-value">@Model.JoinDate.ToString("yyyy-MM-dd")</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-birthday-cake me-2"></i>Birth Date:</span>
            <span class="detail-value">@Model.BirthDate.ToString("yyyy-MM-dd")</span>
        </div>
        <div class="teller-detail">
            <span class="detail-label"><i class="fas fa-money-bill-wave me-2"></i>Salary:</span>
            <span class="detail-value">@Model.Salary</span>
        </div>
    </div>

    <h3 class="confirmation-text">
        <i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this teller?
    </h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="button-group">
            <button type="submit" class="btn btn-delete">
                <i class="fas fa-trash-alt me-2"></i>Delete
            </button>
            <a href="@Url.Action("GetAllTellers", new { id = ManagerId })" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    }
</div>

@section Scripts {
    <!-- Add Font Awesome if not already included -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}