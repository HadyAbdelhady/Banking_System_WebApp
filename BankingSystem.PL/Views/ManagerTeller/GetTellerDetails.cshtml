@using System.Security.Claims
@model BankingSystem.PL.ViewModels.Manager.TellerDetailsViewModel
@{
    ViewData["Title"] = "Teller Details";
    var ManagerId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
}

<style>
    .details-container {
        background: var(--accent-3);
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        max-width: 1200px;
        margin: 1.5rem auto;
    }

    .details-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--secondary-light);
    }

        .details-header h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            color: var(--primary-dark);
        }

        .details-header i {
            font-size: 1.75rem;
            color: var(--primary-medium);
        }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .details-item {
        padding: 1rem;
        background-color: white;
        border-radius: 8px;
        border: 1px solid var(--secondary-light);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .details-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .details-label {
        color: var(--neutral-3);
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    .details-value {
        color: var(--neutral-5);
        font-size: 1rem;
        padding-left: 1.75rem;
    }

    .icon {
        color: var(--primary-medium);
        min-width: 1.25rem;
    }

    .button-group {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: space-between;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--secondary-light);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s;
        text-decoration: none;
        border: none;
        cursor: pointer;
        flex: 1 1 auto;
        min-width: 120px;
        max-width: 200px;
    }

    .btn-primary {
        background-color: var(--primary-medium);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--accent-3);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background-color: var(--neutral-1);
        color: var(--neutral-5);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .details-container {
            padding: 1rem;
            margin: 1rem;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .button-group {
            flex-direction: column;
            align-items: stretch;
        }

        .btn {
            max-width: 100%;
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .details-header h2 {
            font-size: 1.3rem;
        }

        .details-label {
            font-size: 0.85rem;
        }

        .details-value {
            font-size: 0.95rem;
        }
    }
</style>

<div class="details-container">
    <div class="details-header">
        <i class="fas fa-user-tie"></i>
        <h2>Teller Details</h2>
    </div>

    <div class="details-grid">
        <!-- Personal Information Section -->
        <div class="details-item">
            <div class="details-label">
                <i class="fas fa-id-card icon"></i>Personal Information
            </div>
            <div class="details-value">
                <div><strong>@Model.FirstName @Model.LastName</strong></div>
                <div>SSN: @Model.SSN</div>
                <div>Born: @Model.BirthDate.ToString("yyyy-MM-dd")</div>
            </div>
        </div>

        <!-- Contact Information Section -->
        <div class="details-item">
            <div class="details-label">
                <i class="fas fa-address-book icon"></i>Contact Information
            </div>
            <div class="details-value">
                <div>@Model.Email</div>
                <div>@Model.PhoneNumber</div>
                <div>@Model.Address</div>
            </div>
        </div>

        <!-- Employment Information Section -->
        <div class="details-item">
            <div class="details-label">
                <i class="fas fa-briefcase icon"></i>Employment Details
            </div>
            <div class="details-value">
                <div>Joined: @Model.JoinDate.ToString("yyyy-MM-dd")</div>
                <div>Salary: @Model.Salary.ToString("C")</div>
                <div>Branch: @Model.BranchName</div>
                @if (!string.IsNullOrEmpty(Model.DepartmentName))
                {
                    <div>Department: @Model.DepartmentName</div>
                }
            </div>
        </div>
    </div>

    <div class="button-group">
        <a asp-action="GetAllTellers" asp-route-id="@ManagerId" class="btn btn-secondary text-white">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-action="EditTeller" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Teller
        </a>
    </div>
</div>

@section Scripts {
    <!-- Add Font Awesome if not already included -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}