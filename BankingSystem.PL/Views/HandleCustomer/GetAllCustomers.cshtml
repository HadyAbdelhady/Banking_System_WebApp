@model List<CustomersViewModel>

@{
    ViewData["Title"] = "Customers Management";
}


<div class="container my-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 pb-2 border-bottom">
        <div>
            <h1 class="h3 text-primary">
                <i class="fas fa-users me-2"></i> Customers Management
            </h1>
            <p class="text-muted mb-0">View, update, and manage customer information</p>
        </div>
        <a asp-action="AddCustomer" class="btn btn-primary mt-3 mt-md-0">
            <i class="fas fa-plus-circle me-1"></i> Add New Customer
        </a>
    </div>


    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <!-- Search Form -->
        <form asp-action="Search" method="get" class="w-100 w-md-auto">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                <input type="text" name="name" value="@ViewBag?.name"
                       class="form-control" placeholder="Search by customer name or SSN...">
                <button type="submit" class="btn btn-primary">
                    Search
                </button>
            </div>
        </form>

        <!-- Filter Dropdown -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-filter me-1"></i> Filter by Branch
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="?branch=Main">Main Branch</a></li>
                <li><a class="dropdown-item" href="?branch=North">North Branch</a></li>
                <li><a class="dropdown-item" href="?branch=South">South Branch</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="/Customers">Clear Filter</a></li>
            </ul>
        </div>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn bank-btn btn-add btn-lg shadow-sm btn-flat" asp-action="CreateCustomer">
            <i class="fas fa-user-plus"></i> Add New Customer
        </a>

    </div>

    <div class="table-responsive shadow-sm rounded bg-white">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-dark text-white text-center">
                <tr>
                    <th>SSN</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Branch</th>
                    <th>Address</th>
                    <th>Join Date</th>
                    <th>Birth Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr class="text-center">
                        <td class="fw-bold text-primary">
                            <i class="fas fa-id-card me-2"></i>
                            @customer.SSN
                        </td>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Branch</td>
                        <td class="text-muted">@customer.Address</td>
                        <td>@customer.JoinDate.ToString("dd MMM yyyy")</td>
                        <td>@customer.BirthDate.ToString("dd MMM yyyy")</td>
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <!-- Accounts Button -->
                                <a asp-action="ShowAccounts" asp-route-id="@customer.Id" class="btn btn-outline-info btn-sm" title="Accounts">
                                    <i class="fas fa-building-columns"></i>
                                </a>
                                <!-- Details Button -->
                                <a asp-action="GetCustomerDetails" asp-route-id="@customer.Id" class="btn btn-outline-primary btn-sm" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <!-- Edit Button -->
                                <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- Delete Button -->
                                <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" onsubmit="return confirmDelete()" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this customer? This action cannot be undone.');
        }
    </script>
}