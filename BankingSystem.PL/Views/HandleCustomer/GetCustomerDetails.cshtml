@model BankingSystem.PL.ViewModels.Teller.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Customer Details";
    var tellerId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
}

<div class="container mt-4">
    <h1 class="text-center bg-dark text-white p-3 rounded shadow-lg">Customer Details</h1>

    <div class="card shadow-sm p-4 border-0">
        <h4 class=" mb-3">Basic Information</h4>
        <div class="table-responsive">
            <table class="table table-borderless">
                <tbody class="fw-medium">
                    <tr>
                        <td class="text-muted">Customer Name:</td>
                        <td>@Model.FirstName @Model.LastName</td>
                    </tr>
                    <tr>
                        <td class="text-muted">SSN:</td>
                        <td>@Model.SSN</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Branch:</td>
                        <td>@Model.Branch</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Address:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Join Date:</td>
                        <td>@Model.JoinDate.ToString("MM-dd-yyyy")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Birth Date:</td>
                        <td>@Model.BirthDate.ToString("MM-dd-yyyy")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.AccountNumbers?.Any() == true)
    {
        <div class="card shadow-sm p-4 mt-4 border-0">
            <h4 class="text-primary mb-3">Accounts</h4>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr><th>Account Number</th></tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model.AccountNumbers)
                    {
                        <tr><td>@acc</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="font-weight:bold" class="alert alert-info mt-4 shadow-sm">No accounts for this customer.</div>
    }

    @if (Model.LoanTypes?.Any() == true)
    {
        <div class="card shadow-sm p-4 mt-4 border-0">
            <h4 class="text-primary mb-3">Loans</h4>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr><th>Loan Type</th></tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model.LoanTypes)
                    {
                        <tr><td>@loan</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="font-weight:bold" class="alert alert-info mt-4 shadow-sm">No loans for this customer.</div>
    }

    @if (Model.CardTypes?.Any() == true)
    {
        <div class="card shadow-sm p-4 mt-4 border-0">
            <h4 class="text-primary mb-3">Cards</h4>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr><th>Card Type</th></tr>
                </thead>
                <tbody>
                    @foreach (var card in Model.CardTypes)
                    {
                        <tr><td>@card</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="font-weight:bold" class="alert alert-info mt-4 shadow-sm">No cards for this customer.</div>
    }

    @if (Model.TransactionDescriptions?.Any() == true)
    {
        <div class="card shadow-sm p-4 mt-4 border-0">
            <h4 class="text-primary mb-3">Transactions</h4>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr><th>Description</th></tr>
                </thead>
                <tbody>
                    @foreach (var trans in Model.TransactionDescriptions)
                    {
                        <tr><td>@trans</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="font-weight:bold" class="alert alert-info mt-4 shadow-sm">No transactions for this customer.</div>
    }

    @if (Model.TicketSubjects?.Any() == true)
    {
        <div class="card shadow-sm p-4 mt-4 border-0">
            <h4 class="text-primary mb-3">Support Tickets</h4>
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr><th>Subject</th></tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.TicketSubjects)
                    {
                        <tr><td>@ticket</td></tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="font-weight:bold" class="alert alert-info mt-4 shadow-sm">No support tickets for this customer.</div>
    }

    <div class="mt-4 d-flex justify-content-end">
        <a class="btn btn-secondary btn-lg shadow" asp-action="GetAllCustomers" asp-route-id="@tellerId">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
