@model BankingSystem.PL.ViewModels.Teller.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Delete Customer";
    var tellerId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
    var accentColor = "#004080"; // Navy
    var gold = "#DAA520";        // Gold accent
}

<style>
    .bank-delete-header {
        background-color: @accentColor;
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0 10px rgba(0,0,0,0.15);
        margin-bottom: 1.5rem;
    }

    .alert-warning {
        border-left: 5px solid @gold;
        background-color: #fff8e1;
        color: #8a6d3b;
        padding: 1.25rem;
        font-weight: 500;
        box-shadow: 0 0 5px rgba(0,0,0,0.05);
    }

    .card-bank {
        border: none;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
        border-radius: 0.5rem;
        margin-top: 1rem;
    }

        .card-bank .card-body {
            background-color: #f9f9f9;
        }

    dt {
        font-weight: 600;
        color: @accentColor;
    }

    dd {
        font-weight: 500;
    }

    .btn-confirm {
        background-color: #b22222;
        color: white;
        border: none;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
        border-radius: 0.375rem;
        transition: 0.3s ease;
    }

        .btn-confirm:hover {
            background-color: #8b0000;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
        border-radius: 0.375rem;
        transition: 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }

    .form-actions {
        margin-top: 2rem;
    }
</style>

<div class="container mt-5">
    <div class="bank-delete-header text-center">
        <h2 class="mb-0">Delete Customer</h2>
    </div>

    <div class="alert alert-warning text-center">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Are you sure you want to permanently delete this customer?
    </div>

    <div class="card card-bank">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">SSN</dt>
                <dd class="col-sm-9">@Model.SSN</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Branch</dt>
                <dd class="col-sm-9">@Model.Branch</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Join Date</dt>
                <dd class="col-sm-9">@Model.JoinDate.ToString("MM-dd-yyyy")</dd>

                <dt class="col-sm-3">Birth Date</dt>
                <dd class="col-sm-9">@Model.BirthDate.ToString("MM-dd-yyyy")</dd>

                <dt class="col-sm-3">Accounts</dt>
                <dd class="col-sm-9">
                    @(Model.AccountNumbers != null && Model.AccountNumbers.Any()
                        ? string.Join(", ", Model.AccountNumbers)
                        : "No Accounts for this Customer")
                </dd>

                @if (Model.LoanTypes?.Any() == true)
                {
                    <dt class="col-sm-3">Loans</dt>
                    <dd class="col-sm-9">@string.Join(", ", Model.LoanTypes)</dd>
                }

                @if (Model.CardTypes?.Any() == true)
                {
                    <dt class="col-sm-3">Cards</dt>
                    <dd class="col-sm-9">@string.Join(", ", Model.CardTypes)</dd>
                }

                @if (Model.TransactionDescriptions?.Any() == true)
                {
                    <dt class="col-sm-3">Transactions</dt>
                    <dd class="col-sm-9">@string.Join(", ", Model.TransactionDescriptions)</dd>
                }

                @if (Model.TicketSubjects?.Any() == true)
                {
                    <dt class="col-sm-3">Support Tickets</dt>
                    <dd class="col-sm-9">@string.Join(", ", Model.TicketSubjects)</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="DeleteCustomer" asp-route-id="@Model.Id" method="post" class="form-actions text-center">
        <button type="submit" class="btn btn-confirm me-3">
            <i class="fas fa-trash-alt"></i> Confirm Delete
        </button>
        <a asp-action="GetAllCustomers" asp-route-id="@tellerId" class="btn btn-cancel">
            <i class="fas fa-times-circle"></i> Cancel
        </a>
    </form>
</div>
