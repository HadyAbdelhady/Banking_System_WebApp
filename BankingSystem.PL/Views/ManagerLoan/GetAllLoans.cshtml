@using BankingSystem.DAL.Models
@model List<LoansViewModel>
@{
    ViewData["Title"] = "Loans List";
}

<div class="container mt-4">
    <h2 class="mb-4">Loans in Your Branch</h2>
    <div class="mb-3">
        <input type="number" id="searchInput" placeholder="Search by Account Number Or by SSN" class="form-control" />
        <label >Search</label>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No loans found in this branch.
        </div>
    }
    else
    {
        <div class="mb-3">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="row justify-content-center">
                        <h3 class="text-center mb-3 col-3">Loan Type</h3>
                        <div class="d-flex flex-wrap justify-content-center gap-2 mb-4 col-9">
                            <button class="btn btn-outline-primary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-type" data-filter-value="Car">
                                <i class="fas fa-car me-2"></i>Car
                            </button>
                            <button class="btn btn-outline-primary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-type" data-filter-value="Business">
                                <i class="fas fa-briefcase me-2"></i>Business
                            </button>
                            <button class="btn btn-outline-primary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-type" data-filter-value="RealEstate">
                                <i class="fas fa-house me-2"></i>Real Estate
                            </button>
                            <button class="btn btn-outline-primary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-type" data-filter-value="Other">
                                <i class="fas fa-ellipsis-h me-2"></i>Other
                            </button>
                            <button class="btn btn-outline-secondary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-type" data-filter-value="all">
                                <i class="fas fa-filter me-2"></i>All Types
                            </button>
                        </div>
                    </div>
                    <div class="row justify-content-center">

                        <h3 class="text-center mb-3 col-3">Loan Status</h3>
                        <div class="d-flex flex-wrap justify-content-center gap-2 mb-4 col-9">
                            <button class="btn btn-outline-warning btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-status" data-filter-value="Pending">
                                <i class="fas fa-clock me-2"></i>Pending
                            </button>
                            <button class="btn btn-outline-success btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-status" data-filter-value="Accepted">
                                <i class="fas fa-check-circle me-2"></i>Accepted
                            </button>
                            <button class="btn btn-outline-danger btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-status" data-filter-value="Denied">
                                <i class="fas fa-times-circle me-2"></i>Denied
                            </button>
                            <button class="btn btn-outline-secondary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-status" data-filter-value="Paid">
                                <i class="fas fa-coins me-2"></i>Paid
                            </button>
                            <button class="btn btn-outline-secondary btn-sm filter-btn px-3 rounded-pill"
                                    data-filter-type="loan-status" data-filter-value="all">
                                <i class="fas fa-filter me-2"></i>All Statuses
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Customer Name</th>
                    <th>Account</th>
                    <th>Loan Type</th>
                    <th>Amount</th>
                    <th>Current Debt</th>
                    <th>Interest Rate</th>
                    <th>Duration (Months)</th>
                    <th>Status</th>
                    <th>Start Date</th>
                    <th>Actions</th>
                    <th class="d-none">SSN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr data-loan-type="@loan.LoanType" data-loan-status="@loan.LoanStatus">
                        <td>@loan.CustomerName</td>
                        <td>@loan.AccountNumber</td>
                        <td>@loan.LoanType</td>
                        <td>@loan.LoanAmount.ToString("C")</td>
                        <td>@loan.CurrentDebt.ToString("C")</td>
                        <td>@loan.InterestRate%</td>
                        <td>@loan.DurationInMonth</td>
                        <td>
                            @{
                                var statusClass = loan.LoanStatus switch
                                {
                                    LoanStatus.Pending => "bg-warning text-dark",
                                    LoanStatus.Denied => "bg-danger",
                                    LoanStatus.Accepted => "bg-success",
                                    LoanStatus.Paid => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@loan.LoanStatus</span>
                        </td>
                        <td>@loan.StartDate.ToShortDateString()</td>
                        <td class="d-none">@loan.SSN</td>
                        <td>
                            <a asp-controller="ManagerLoan" asp-action="PreviewLoan" asp-route-LoanId="@loan.Id" class="btn btn-primary btn-sm">Preview</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/FilteringLoans.js"></script>

}