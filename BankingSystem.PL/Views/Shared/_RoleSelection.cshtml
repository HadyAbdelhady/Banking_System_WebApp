@model BankingSystem.PL.ViewModels.Auth.RegisterViewModel

@if (ViewData["FixedRole"] != null)
{
    <!-- If a fixed role is provided, display it as plain text -->
    <div class="col-md-6">
        <label asp-for="Role" class="form-label fw-semibold"></label>
        <input type="text" class="form-control rounded-pill" value="@ViewData["FixedRole"]" readonly />
        <input type="hidden" asp-for="Role" value="@ViewData["FixedRole"]" />
    </div>
}
else
{
    <!-- Otherwise, render the dropdown for role selection -->
    <div class="col-md-6">
        <label asp-for="Role" class="form-label fw-semibold"></label>
        <select asp-for="Role" asp-items="Model.AvailableRoles" class="form-select rounded-pill">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
}