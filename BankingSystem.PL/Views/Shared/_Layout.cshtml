@using System.Security.Claims
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingSystem.PL</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingSystem.PL.styles.css" asp-append-version="true" />

    <style>
        /* ====== Global Styles ====== */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* ====== Navbar Styles ====== */
        .navbar {
            background-color: #003366 !important; /* Dark Blue */
            padding: 10px 0;
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #0073e6 !important; /* Light Blue */
            }

        .navbar-toggler {
            border-color: #ffffff;
        }

        /* ====== Footer Styles ====== */
        footer {
            background-color: #001f3f;
            color: #ffffff;
            padding: 20px 0;
            margin-top: 40px;
            text-align: center;
        }

            footer a {
                color: #d4af37; /* Gold */
                text-decoration: none;
            }

                footer a:hover {
                    color: #ffffff;
                }

        /* ====== Button Styles ====== */
        .btn-primary {
            background-color: #0073e6; /* Light Blue */
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker Blue */
            }

        /* ====== Main Content Styles ====== */
        main {
            padding-top: 20px;
            min-height: 60vh;
        }

        .navbar-brand {
            font-size: 1.4rem;
            font-weight: bold;
        }

        .bank-highlight {
            color: #28a745; /* Green for positive balances */
            font-weight: bold;
        }

        .account-summary {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BankingSystem.PL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <!-- Left Side -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Manager"))
                        {
                            var userId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ManagerTeller" asp-action="GetAllTellers" asp-route-id="@userId">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ManagerBranch" asp-action="GetBranchDetails" asp-route-id="@userId">Branche</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ManagerSavings" asp-action="GetAllSavings" asp-route-id="@userId">Savings</a>
                            </li>
                        }

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Manage">Manage Users</a>
                            </li>
                        }
                    </ul>

                    <!-- Right Side -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <strong>Admin</strong>
                                    }
                                    else if (User.IsInRole("Manager"))
                                    {
                                        <strong>Manager</strong>
                                    }
                                    @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-primary text-white nav-link border-0 bg-transparent">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link btn btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>


            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
