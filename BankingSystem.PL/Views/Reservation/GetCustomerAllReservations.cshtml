@using BankingSystem.DAL.Models
@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "My Reservations";
}

<style>
    body {
        background-color: #3E5879;
    }
</style>


<div class="container mt-5">

    <!-- Start: Make Reservation Card -->
    <div class="d-flex justify-content-center mb-5">
        <div class="card shadow-lg border-0 rounded-4 p-4 w-100" style="max-width: 600px; background-color: #fdfdfd;">
            <h4 class="text-center mb-3">Make a New Reservation</h4>
            <p class="text-center text-muted mb-4">Book your appointment easily at the branch of your choice.</p>

            <div class="text-center">
                <a class="btn btn-primary px-4 py-2 fw-semibold" asp-area="" asp-controller="Reservation" asp-action="CreateReservation">
                    <i class="bi bi-calendar-plus me-2"></i>Make a Reservation
                </a>
            </div>
        </div>
    </div>
    <!-- End: Make Reservation Card -->
    @if (!Model.Any())
    {
        <!-- No Reservations -->
        <div class="d-flex justify-content-center">
            <div class="card shadow-lg border-0 rounded-4 p-4 w-100 text-center" style="max-width: 600px; background-color: #f9f9f9;">
                <h5 class="text-muted mb-3">You don't have any reservations yet.</h5>
                <p class="text-secondary">Use the button above to make your first reservation.</p>
            </div>
        </div>
    }
    else
    {
        <h2 class="mb-4 text-primary fw-bold text-center">Your Reservations</h2>

        <!-- List of Reservations -->
        <div class="row">
            @foreach (var reservation in Model)
            {
                bool isFuture = reservation.ReservationDate > DateTime.Now;
                bool isApproved = reservation.Status == ReservationStatus.Approved;

                <div class="col-12 col-md-6 mb-4">
                    <div class="card shadow-lg rounded-4 p-4 h-100 border-0" style="background-color: #f9f9f9;">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0 text-primary fw-bold">@reservation.Branch?.Name</h5>
                            <span class="badge px-3 py-2 fs-6
                                @(reservation.Status == ReservationStatus.Approved ? "bg-success" :
                                  reservation.Status == ReservationStatus.Pending ? "bg-warning text-dark" :
                                  "bg-danger")">
                                @reservation.Status
                            </span>
                        </div>

                        <p class="mb-1"><strong>Service:</strong> @reservation.ServiceType</p>
                        <p class="mb-3"><strong>Date:</strong> @reservation.ReservationDate.ToString("dddd, dd MMMM yyyy hh:mm tt")</p>

                        <div class="text-end mt-auto">
                            @if (isApproved && isFuture)
                            {
                                <a class="btn btn-outline-primary fw-semibold"
                                   href="@Url.Action("ReservationSuccess", "Reservation", new { reservationId = reservation.Id })">
                                    View QR Code
                                </a>
                            }
                            else if (isApproved && !isFuture)
                            {
                                <span class="text-danger fst-italic">This ticket has expired.</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
