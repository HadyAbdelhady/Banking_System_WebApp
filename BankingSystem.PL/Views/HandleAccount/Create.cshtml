@using BankingSystem.DAL.Models
@model Account

@{
    ViewData["Title"] = "Create";
    Customer Customer = ViewBag.Customer;
}


<div class="d-flex justify-content-between pt-2">
    <h1 class="h2 text-primary text-center w-100">
        <i class="fas fa-pen me-2"></i> Add Account
    </h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="text-center">
                <span class="fw-medium">Client Name : @Customer?.FirstName @Customer?.LastName →</span>
                <small class="text-muted">CID: @Customer?.Id</small>
            </div>
            <div class="text-center mb-1">
                <span class="fw-medium">Branch →</span>
                <small class="text-muted">@Customer?.Branch?.Name</small>
            </div>

            <partial name="_CreateEditPartial" model="@Model" />


            <input type="hidden" asp-for="CustomerId" value="@Customer?.Id" />
            <input type="hidden" asp-for="BranchId" value="@Customer?.BranchId" />


             <div class="mt-5 d-flex justify-content-center gap-3"> 
                 <button type="submit" class="btn btn-primary px-5 py-2 fs-5"> 
                     <i class="fas fa-edit me-2"></i>Add Account 
                 </button>
                <a href="javascript:history.back()" class="btn btn-outline-secondary px-5 py-2 fs-5">
                    <i class="fas fa-arrow-left me-2"></i>Cancel
                </a>
             </div> 
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
