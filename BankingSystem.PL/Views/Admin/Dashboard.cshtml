<style>
    :root {
        --primary-dark: #1a1a1a !important;
        --sidebar-dark: #252525 !important;
        --accent-color: #6c757d !important;
        --accent-hover: #5a6268 !important;
        --text-primary: #f8f9fa !important;
        --text-secondary: #adb5bd !important;
        --card-bg: #2d2d2d !important;
        --table-bg: #2d2d2d !important;
        --table-border: #3d3d3d !important;
        --success-color: #28a745 !important;
        --warning-color: #ffc107 !important;
        --danger-color: #dc3545 !important;
        --info-color: #17a2b8 !important;
        --accent-1: #6c757d !important;
        --accent-2: #efd7cf;
    }

    body {
        background-color: var(--primary-dark) !important;
        color: var(--text-primary) !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .card {
        background-color: var(--card-bg);
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

    .card-header {
        background-color: rgba(45, 45, 45, 0.8);
        border-bottom: 1px solid var(--table-border);
        font-weight: 600;
        border-radius: 10px 10px 0 0 !important;
    }

    .table {
        color: var(--text-primary);
        background-color: var(--table-bg);
    }

        .table th {
            border-bottom: 1px solid var(--table-border);
            font-weight: 600;
        }

        .table td {
            border-top: 1px solid var(--table-border);
            vertical-align: middle;
        }

    .btn-outline-primary {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--accent-color);
            color: var(--text-primary);
        }

    .stat-card {
        border-left: 4px solid var(--accent-color);
        height: 100%;
    }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .stat-card .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card .trend-indicator {
            font-size: 0.8rem;
            margin-top: 8px;
        }

    .text-success {
        color: var(--success-color) !important;
    }

    .text-warning {
        color: var(--warning-color) !important;
    }

    .text-danger {
        color: var(--danger-color) !important;
    }

    .text-info {
        color: var(--info-color) !important;
    }

    .dashboard-header {
        margin-bottom: 30px;
    }

        .dashboard-header h4 {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .dashboard-header p {
            color: var(--text-secondary);
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .bnk-logo {
        margin-left: 5px;
        color: var(--accent-color);
    }

    .trend-up {
        color: var(--success-color);
    }

    .trend-down {
        color: var(--warning-color);
    }

    @@media (max-width: 768px) {
        .stat-card .stat-value

    {
        font-size: 1.5rem;
    }

    }
</style>


