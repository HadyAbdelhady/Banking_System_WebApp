@model BankingSystem.DAL.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}


<style>
    body {
        background-color: #1a1a1a !important;
    }

    .container {
        margin-top: 1.5%;
    }

    .details-card {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(255, 250, 250, 0.2);
        backdrop-filter: blur(6.5px);
        -webkit-backdrop-filter: blur(6.5px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        color: #fff;
        max-width: 850px;
        margin: auto;
        padding: 2rem 2.5rem;
    }

    .details-header {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
        color: #f5f5f5;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #444;
        padding: 1rem 0;
    }

    .detail-label {
        font-weight: 500;
        font-size: 0.95rem;
        color: #ccc;
        flex-basis: 35%;
    }

    .detail-value {
        font-size: 1rem;
        font-weight: 400;
        text-align: right;
        flex-basis: 60%;
        color: #eee;
    }

    .action-buttons {
        margin-top: 2rem;
        display: flex;
        justify-content: flex-start;
    }

    .btn-custom {
        border-radius: 0.5rem;
        padding: 0.5rem 1.2rem;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-back {
        background-color: transparent;
        border: 1px solid #aaa;
        color: #aaa;
        transition: all 0.2s;
    }

        .btn-back:hover {
            background-color: #444;
            color: white;
        }

    i {
        font-size: 0.9rem;
    }
</style>


<div class="container">
    <div class="details-card">
        <div class="details-header">
            <i class="fas fa-money-check-alt me-2 fs-3"></i> Transaction Details
        </div>

        <div class="detail-row">
            <div class="detail-label">Status</div>
            <div class="detail-value">@Model.Status</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Type</div>
            <div class="detail-value">@Model.Type</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Done Via</div>
            <div class="detail-value">@Model.DoneVia</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Destination Account</div>
            <div class="detail-value">@Model.AccountDistenationNumber</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Payment ID</div>
            <div class="detail-value">@Model.Payment?.Id</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Customer ID</div>
            <div class="detail-value">@Model.Customer?.Id</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Customer Name</div>
            <div class="detail-value">@Model.Customer?.FirstName @Model.Customer?.LastName</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Account Number</div>
            <div class="detail-value">@Model.Account?.Number</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">Branch</div>
            <div class="detail-value">@Model.Customer?.Branch?.Name</div>
        </div>

        <div class="action-buttons">
            <a asp-action="Index" asp-controller="Admin" asp-route-activeSection="transactions" class="btn-custom btn-back">
                <i class="fas fa-arrow-left"></i> <span class="fw-bold">Back</span>
            </a>
        </div>
    </div>
</div>
