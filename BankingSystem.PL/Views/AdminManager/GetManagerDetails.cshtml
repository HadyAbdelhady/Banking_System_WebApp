@model BankingSystem.DAL.Models.Manager

@{
    ViewData["Title"] = "Manager Details";
}

<style>
    .manager-details-container {
        background: var(--accent-3);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .manager-header {
        color: var(--primary-dark);
        border-bottom: 2px solid var(--accent-1);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .detail-card {
        background: var(--white);
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .detail-row {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--accent-2);
    }

    .detail-label {
        color: var(--primary-medium);
        font-weight: 500;
    }

    .detail-value {
        color: var(--primary-dark);
    }

    .action-buttons {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-12">
            <div class="manager-details-container">
                <h2 class="manager-header">
                    <i class="fas fa-user-tie me-2"></i>Manager Profile
                </h2>

                <div class="detail-card">
                    <div class="detail-row">
                        <div class="detail-label">Full Name</div>
                        <div class="detail-value">@Model.FirstName @Model.LastName</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">Email</div>
                        <div class="detail-value">@Model.Email</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">Salary</div>
                        <div class="detail-value">@Model.Salary.ToString("C")</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">Branch</div>
                        <div class="detail-value">
                            @(Model.Branch?.Name ?? "N/A")
                            
                        </div>
                    </div>

                  
                </div>

                <div class="action-buttons">
                 
                    <a class="btn btn-danger" asp-action="DeleteManager" asp-route-id="@Model.Id">
                        <i class="fas fa-trash-alt "></i>
                    </a>
                    <a class="btn btn-secondary" asp-action="GetAllManagers">
                        <i class="fas fa-arrow-left "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete confirmation
        document.querySelector('.btn-danger').addEventListener('click', function(e) {
            if (!confirm('Are you sure you want to delete this manager?')) {
                e.preventDefault();
            }
        });
    </script>
}