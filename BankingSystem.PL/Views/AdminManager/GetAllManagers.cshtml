@using BankingSystem.DAL.Models

@model IEnumerable<Manager>

@{
    ViewData["Title"] = "Managers List";
}

<style>
    .managers-container {
        background: var(--accent-3);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .managers-header {
        color: var(--primary-dark);
        border-bottom: 2px solid var(--accent-1);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .add-manager-btn {
        background-color: var(--primary-medium);
        border: none;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
    }

        .add-manager-btn:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .managers-table {
        background: var(--white);
        border-radius: 10px;
        overflow: hidden;
    }

        .managers-table thead {
            background: linear-gradient(90deg, var(--primary-dark), var(--primary-medium));
            color: var(--accent-3);
        }

        .managers-table th {
            font-weight: 500;
            padding: 1rem;
        }

        .managers-table td {
            vertical-align: middle;
            padding: 0.75rem 1rem;
        }

        .managers-table tr:hover {
            background-color: var(--accent-2);
        }

    .action-icon {
        font-size: 1.2rem;
        padding: 0.5rem;
        margin: 0 0.25rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .icon-details {
        color: var(--secondary-dark);
    }

    .icon-edit {
        color: var(--primary-light);
    }

    .icon-delete {
        color: var(--accent-1);
    }

    .action-icon:hover {
        transform: scale(1.1);
        text-decoration: none;
        opacity: 0.9;
    }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-10 col-12">
            <div class="managers-container">
                <h2 class="managers-header">
                    <i class="fas fa-user-tie me-2"></i>Managers List
                </h2>

                <a class="btn add-manager-btn text-white" asp-action="CreateManager">
                    <i class="fas fa-plus-circle me-2"></i>Add New Manager
                </a>

                <div class="table-responsive">
                    <table class="table managers-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Salary</th>
                                <th>Branch</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var manager in Model)
                            {
                                <tr>
                                    <td>@manager.FirstName @manager.LastName</td>
                                    <td>@manager.Email</td>
                                    <td>@manager.Salary.ToString("C")</td>
                                    <td>@manager.Branch.Name</td>
                                    <td>
                                        <a class="action-icon icon-details"
                                           asp-action="GetManagerDetails"
                                           asp-route-id="@manager.Id"
                                           title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="action-icon icon-edit"
                                           asp-action="EditManager"
                                           asp-route-id="@manager.Id"
                                           title="Edit">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a class="action-icon icon-delete"
                                           asp-action="DeleteManager"
                                           asp-route-id="@manager.Id"
                                           title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete confirmation
        document.querySelectorAll('.icon-delete').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Are you sure you want to delete this manager?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
