@model BankingSystem.PL.ViewModels.Manager.TellerDetailsViewModel

@{
    ViewData["Title"] = "Teller Details";
}

<h2>Teller Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Branch:</strong> @Model.BranchName</p>
    </div>
</div>

<a asp-action="GetAllEmployees" class="btn btn-secondary mt-3">Back to List</a>
