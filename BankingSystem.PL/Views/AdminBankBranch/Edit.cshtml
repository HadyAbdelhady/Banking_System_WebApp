@using BankingSystem.DAL.Models
@model Branch

@{
    ViewData["Title"] = "Edit Branch Manager";
}

<style>
    body {
        background-color: #1a1a1a !important;
    }

    .card-body {
        background-color: #ededed !important;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        background-color: #bebebe !important;
    }

    .container-fluid {
        margin-top: 5%;
    }

    h4, h5, h6 {
        color: black;
    }

    .manager-card {
        background-color: white;
        border-radius: 0.35rem;
        padding: 1.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        margin-bottom: 1.5rem;
    }

    .manager-avatar {
        width: 60px;
        height: 60px;
        background-color: #f8f9fc;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #4e73df;
    }

    .info-badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
        border-radius: 0.25rem;
    }

    .divider {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        margin: 1.5rem 0;
    }

    .form-select {
        height: calc(2.5em + 0.75rem + 2px);
        border-radius: 0.35rem;
        border: 1px solid #d1d3e2;
    }

    .btn-dark {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
    }

        .btn-dark:hover {
            background-color: #000;
            border-color: #000;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-tie me-2"></i>Edit Branch Manager
                        </h4>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Branch Info Section -->
                    <div class="manager-card">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-1">@Model.Name</h5>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>@Model.Location
                                </p>
                                <span class="info-badge text-white mb-3 @(Model.IsDeleted ? "bg-danger" : "bg-success")">
                                    <i class="fas fa-clock me-1"></i>
                                    @Model.Opens.ToString(@"hh\:mm") - @Model.Closes.ToString(@"hh\:mm")
                                </span>
                            </div>
                            <div class="col-md-4 text-md-end text-white">
                                <span class="info-badge @(Model.IsDeleted ? "bg-danger" : "bg-success")">
                                    @(Model.IsDeleted ? "Inactive" : "Active")
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Current Manager Section -->
                    <div class="manager-card">
                        <h6 class="mb-3">Current Manager</h6>
                        @if (Model.MyManager != null)
                        {
                            <div class="d-flex align-items-center">
                                <div class="manager-avatar me-3">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">@Model.MyManager.FirstName @Model.MyManager.LastName</h6>
                                    <p class="text-muted mb-0">@Model.MyManager.Email</p>
                                    <small class="text-muted">SSN: @Model.MyManager.SSN</small>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                No manager currently assigned to this branch
                            </div>
                        }
                    </div>

                    <div class="divider"></div>

                    <!-- Manager Assignment Form -->
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <h6 class="mb-2">Assign New Manager</h6>
                            <div class="form-group">

                                <select asp-for="MyManager.Id"
                                        asp-items="@(ViewBag.Managers as SelectList)" class="form-control mb-1">
                                </select>

                                <small class="form-text text-muted">Only unassigned managers are shown.</small>

                                @if (ViewData.ModelState["ManagerId"]?.Errors.Count > 0)
                                {
                                    <div class="invalid-feedback d-block">
                                        @ViewData.ModelState["ManagerId"].Errors.FirstOrDefault().ErrorMessage
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            @* <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary" id="back-branch"> *@
                            @*     <i class="fas fa-arrow-left me-1"></i> Back to Branches *@
                            @* </a> *@

                            <a asp-action="Index" asp-controller="Admin"
                               asp-route-activeSection="branches"
                               class="btn btn-secondary"
                               id="back-branch">
                                <i class="fas fa-arrow-left me-1"></i> Back to Branches
                            </a>

                            <button type="submit" class="btn btn-dark">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



