@using BankingSystem.DAL.Models
@model Branch

@{
    ViewData["Title"] = "Edit Branch Manager";
    var managers = ViewBag.Managers as List<Manager> ?? new List<Manager>();
}

<style>
    body {
        background-color: #1a1a1a !important;
    }

    .card-body {
        background-color: #ededed !important;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        background-color: #bebebe !important;
    }

    .container-fluid {
        margin-top: 7%;
    }

    h4 {
        color: black;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Branch Manager</h4>
                </div>
                <div class="card-body">
                    @* @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-4">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    } *@

                    <!-- Current Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Branch Information</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2"><strong>Name:</strong> @Model.Name</li>
                                <li class="mb-2"><strong>Location:</strong> @Model.Location</li>
                                <li class="mb-2"><strong>Hours:</strong> @Model.Opens.ToString(@"hh\:mm") - @Model.Closes.ToString(@"hh\:mm")</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Current Manager</h5>
                            @if (Model.MyManager != null)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle p-3 me-3">
                                        <i class="fas fa-user-tie fa-lg"></i>
                                    </div>
                                    <div>
                                        <div>@Model.MyManager.FirstName @Model.MyManager.LastName</div>
                                        <div class="text-muted">@Model.MyManager.Email</div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    No manager currently assigned
                                </div>
                            }
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Edit Form -->
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label fw-bold">Assign New Manager</label>
                                    
                                    <select name="ManagerID" class="form-control">
                                        <option value="">Select Manager</option>
                                        @foreach (var item in managers)
                                        {
                                            <option value="@item.Id">@item.FirstName @item.LastName</option>
                                        }
                                    </select>

                                    @* <span asp-validation-for="ManagerID" class="text-danger"></span> *@

                                    @*<select name="newManagerId" class="form-select">
                                        <option value="">-- No Change --</option>
                                        @foreach (var manager in managers)
                                        {
                                            <option value="@manager.Id" selected="@(Model.MyManager?.Id == manager.Id)">
                                                @manager.FirstName (@manager.Email)
                                            </option>
                                        }
                                    </select>*@


                                    @if (ViewData.ModelState["Manager"]?.Errors.Count > 0)
                                    {
                                        <span class="text-danger">
                                            <i class="fas fa-exclamation-circle me-1"></i>
                                            @ViewData.ModelState["Manager"].Errors.First().ErrorMessage
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Branches
                            </a>

                            <button type="submit" class="btn btn-dark">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('select[name="newManagerId"]').select2({
                placeholder: "Select a manager",
                allowClear: true,
                theme: 'bootstrap-5'
            });
        });
    </script>
}
