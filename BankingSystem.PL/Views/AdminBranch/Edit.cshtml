@using BankingSystem.DAL.Models
@model Branch
@{
    ViewData["Title"] = "Edit Branch Manager";
    var managers = ViewBag.Managers as List<Manager> ?? new List<Manager>();
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        </div>
    }

    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-2xl font-bold text-gray-800 flex items-center">
            <i class="fas fa-edit mr-3 text-blue-600"></i>
            Edit Branch Manager
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id"
           class="flex items-center text-blue-600 hover:text-blue-800">
            <i class="fas fa-arrow-left mr-2"></i> Back to Branch
        </a>
    </div>

    <!-- Current Info Card -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8 border border-gray-200">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Branch Information</h3>
                <div class="space-y-2">
                    <p><span class="font-medium">Name:</span> @Model.Name</p>
                    <p><span class="font-medium">Location:</span> @Model.Location</p>
                    <p><span class="font-medium">Hours:</span> @Model.Opens.ToString(@"hh\:mm") - @Model.Closes.ToString(@"hh\:mm")</p>
                </div>
            </div>

            <div>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Current Manager</h3>
                @if (Model.MyManager != null)
                {
                    <div class="flex items-center space-x-4">
                        <div class="h-12 w-12 rounded-full bg-blue-100 flex items-center justify-center">
                            <i class="fas fa-user-tie text-blue-600"></i>
                        </div>
                        <div>
                            <p class="font-medium">@Model.MyManager.FirstName @Model.MyManager.LastName</p>
                            <p class="text-sm text-gray-600">@Model.MyManager.Email</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-yellow-600 bg-yellow-50 p-3 rounded-lg">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        No manager currently assigned
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-700 mb-4">
                    <i class="fas fa-user-shield mr-2 text-blue-600"></i>
                    Assign New Manager
                </h3>

                <div class="space-y-4">
                    <!-- Manager Selection Dropdown -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Select Manager</label>
                        <select name="newManagerId" class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500">
                            <option value="">-- No Change --</option>
                            @foreach (var manager in managers)
                            {
                                <option value="@manager.Id" selected="@(Model.MyManager?.Id == manager.Id)">
                                    @manager.FirstName (@manager.Email)
                                </option>
                            }
                        </select>
                        @if (ViewData.ModelState["Manager"]?.Errors.Count > 0)
                        {
                            <p class="mt-1 text-sm text-red-600">
                                <i class="fas fa-exclamation-circle mr-1"></i>
                                @ViewData.ModelState["Manager"].Errors.First().ErrorMessage
                            </p>
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <a asp-action="Details" asp-route-id="@Model.Id"
                   class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-save mr-2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- Optional: Add some custom styles -->
<style>
    .select2-container--default .select2-selection--single {
        height: 42px;
        padding-top: 8px;
        border-radius: 0.5rem;
        border-color: #d1d5db;
    }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 40px;
        }
</style>

<!-- Optional: Enhance dropdown with Select2 -->
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('select[name="newManagerId"]').select2({
                placeholder: "Select a manager",
                allowClear: true
            });
        });
    </script>
}