@using BankingSystem.DAL.Models
@model IEnumerable<Branch>

<head>
    <!-- Add this before your custom CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4 md:mb-0">
            <i class="fas fa-building mr-2 text-blue-600"></i>Bank Branches Management
        </h1>
        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center">
            <i class="fas fa-plus mr-2"></i>Add New Branch
        </a>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="relative">
                <input type="text"
                       placeholder="Search branches..."
                       class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </div>

            <select class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>Filter by Status</option>
                <option>Active</option>
                <option>Inactive</option>
            </select>

            <select class="border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>Filter by Manager</option>
                @foreach (var manager in Model.Select(b => b.MyManager).Distinct())
                {
                    <option>@manager?.FirstName @manager?.LastName</option>
                }
            </select>
        </div>
    </div>

    <!-- Branches Grid -->
    <div class="grid grid-cols-1 gap-6">
        @foreach (var branch in Model)
        {
            <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow">
                <!-- Card Header -->
                <div class="flex items-center justify-between p-6 border-b">
                    <div>
                        <h3 class="text-xl font-semibold text-gray-800">
                            <i class="fas fa-university mr-2 text-blue-500"></i>@branch.Name
                        </h3>
                        <p class="text-gray-600 mt-1">
                            <i class="fas fa-map-marker-alt mr-2 text-gray-400"></i>@branch.Location
                        </p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="px-3 py-1 rounded-full bg-green-100 text-green-800 text-sm">
                            Open @branch.Opens.ToString(@"hh\:mm") - @branch.Closes.ToString(@"hh\:mm")
                        </span>

                        <!-- Enhanced Action Button -->
                        <div class="dropdown relative group">
                            <button type="button" class="px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-gray-700 transition-colors flex items-center space-x-1 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <span>Actions</span>
                                <i class="fas fa-chevron-down text-xs transition-transform duration-200"></i>
                            </button>

                            <!-- Dropdown Menu - the menu itself is now also part of the hover target -->
                            <div class="hidden hover:block group-hover:block absolute right-0 mt-1 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200">
                                <a href="@Url.Action("Details", new { id = branch.Id })" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <i class="fas fa-eye mr-2 text-blue-500"></i> View Details
                                </a>
                                <a href="@Url.Action("Edit", new { id = branch.Id })" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <i class="fas fa-edit mr-2 text-yellow-500"></i> Edit Branch
                                </a>
                                <a href="@Url.Action("ChangeManager", new { id = branch.Id })" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                                    <i class="fas fa-user-cog mr-2 text-purple-500"></i> Change Manager
                                </a>
                                <button onclick="confirmDelete(@branch.Id)" class="w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-gray-100 flex items-center">
                                    <i class="fas fa-trash-alt mr-2 text-red-500"></i> Delete Branch
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Expandable Content -->
                <div class="p-6">
                    <!-- Stats Row -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                        <div class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg">
                            <i class="fas fa-users text-blue-500"></i>
                            <span class="font-bold">@branch.Customers.Count</span>
                            <span class="text-sm text-gray-500">Customers</span>
                        </div>
                        <div class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg">
                            <i class="fas fa-hand-holding-usd text-green-500"></i>
                            <span class="font-bold">@branch.Loans.Count</span>
                            <span class="text-sm text-gray-500">Loans</span>
                        </div>
                        <div class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg">
                            <i class="fas fa-coins text-purple-500"></i>
                            <span class="font-bold">@branch.Savings.Count</span>
                            <span class="text-sm text-gray-500">Savings</span>
                        </div>
                        <div class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg">
                            <i class="fas fa-calendar-check text-orange-500"></i>
                            <span class="font-bold">@branch.Reservations.Count</span>
                            <span class="text-sm text-gray-500">Reservations</span>
                        </div>
                    </div>

                    <!-- Detailed Sections -->
                    <div class="space-y-4">
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-700 mb-2 flex items-center">
                                <i class="fas fa-user-tie mr-2 text-blue-500"></i>Branch Manager
                            </h4>
                            @if (branch.MyManager != null)
                            {
                                <div class="flex items-center space-x-3">
                                    <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                        <i class="fas fa-user text-blue-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium">@branch.MyManager.FirstName @branch.MyManager.LastName</p>
                                        <p class="text-sm text-gray-600">@branch.MyManager.Email</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="text-yellow-600 bg-yellow-50 p-2 rounded flex items-center">
                                    <i class="fas fa-exclamation-circle mr-2"></i>
                                    No manager assigned
                                </p>
                            }
                        </div>

                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-700 mb-2 flex items-center">
                                <i class="fas fa-users-cog mr-2 text-blue-500"></i>Staff Overview
                            </h4>
                            <div class="grid grid-cols-2 gap-4">
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-user-tie text-gray-500"></i>
                                    <div>
                                        <p class="text-sm text-gray-600">Tellers</p>
                                        <p class="font-medium">@branch.Tellers.Count</p>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-sitemap text-gray-500"></i>
                                    <div>
                                        <p class="text-sm text-gray-600">Departments</p>
                                        <p class="font-medium">@branch.Departments.Count</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center">
        <nav class="flex space-x-2">
            <a href="#" class="px-3 py-1 rounded-lg bg-blue-100 text-blue-600">1</a>
            <a href="#" class="px-3 py-1 rounded-lg hover:bg-gray-100">2</a>
            <a href="#" class="px-3 py-1 rounded-lg hover:bg-gray-100">3</a>
        </nav>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
      
    </script>
}

<style>
    /* Animation for dropdown chevron */
    .rotate-180 {
        transform: rotate(180deg);
        transition: transform 0.2s ease;
    }
</style>