@model BankingSystem.PL.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "Error Occurred";
}


<style>
    body {
        background-color: white;
    }

    .error-container {
        max-width: 700px;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    .error-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .error-header {
        background: linear-gradient(135deg, #ff4d4d, #f44336);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .error-icon {
        margin-bottom: 1rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .error-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .error-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .error-body {
        padding: 2rem;
    }

    .error-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

        .error-details h3 {
            color: #dc3545;
            margin-top: 0;
            margin-bottom: 1.5rem;
            font-size: 1.3rem;
        }

    .detail-item {
        display: flex;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }

        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        font-weight: 600;
        width: 120px;
        color: #555;
    }

    .detail-value {
        flex: 1;
    }

    .monospace {
        font-family: 'Courier New', monospace;
        background: rgba(0,0,0,0.05);
        padding: 2px 6px;
        border-radius: 4px;
    }

    .error-suggestions {
        background: #e9f7fe;
        border-radius: 8px;
        padding: 1.5rem;
    }

        .error-suggestions h3 {
            color: #0d6efd;
            margin-top: 0;
            margin-bottom: 1rem;
            font-size: 1.3rem;
        }

        .error-suggestions ul {
            padding-left: 1.5rem;
            margin-bottom: 0;
        }

        .error-suggestions li {
            margin-bottom: 0.5rem;
        }

            .error-suggestions li:last-child {
                margin-bottom: 0;
            }

    .error-footer {
        padding: 1.5rem 2rem;
        background: #e5e5e5;
        border-top: 1px solid #eee;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    @@media (max-width: 576px) {
        .action-buttons {
            flex-direction: column;
        }

            .action-buttons .btn {
                width: 100%;
            }

        .detail-item {
            flex-direction: column;
        }

        .detail-label {
            width: 100%;
            margin-bottom: 0.25rem;
        }
    }
</style>


<div class="error-container">
    <div class="error-card">
        <div class="error-header">
            <div class="error-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
            </div>
            <h1 class="error-title">Oops! Something went wrong</h1>
            <p class="error-subtitle">We encountered an issue while processing your request</p>
        </div>

        <div class="error-body">
            @if (Model.ShowRequestId)
            {
                <div class="error-details">
                    <h3>Error Details</h3>
                    <div class="detail-item">
                        <span class="detail-label">Request ID:</span>
                        <span class="detail-value monospace">@Model.RequestId</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Timestamp:</span>
                        <span class="detail-value">@DateTime.Now.ToString("f")</span>
                    </div>
                </div>
            }

            <div class="error-suggestions">
                <h3>What you can do:</h3>
                <ul>
                    <li>Try refreshing the page</li>
                    <li>Check your network connection</li>
                    <li>Contact support if the problem persists</li>
                </ul>
            </div>
        </div>

        <div class="error-footer">
            <div class="action-buttons">
                <a href="javascript:history.back().back()" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Return Home
                </a>
                <button class="btn btn-outline-secondary" onclick="window.location.reload()">
                    <i class="fas fa-sync-alt me-2"></i>Refresh
                </button>
            </div>
        </div>
    </div>
</div>

