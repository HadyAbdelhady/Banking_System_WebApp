@using BankingSystem.DAL.Models
@model GeneralCertificate

@{
    ViewData["Title"] = "Edit Certificate";
}

<style>
    body {
        background-color: #1a1a1a !important;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.75rem rgba(0, 0, 0, 0.08);
        max-width: 800px;
        margin: 0 auto;
    }

    .card-header {
        background-color: #bebebe !important;
        border-bottom: 1px solid #e3e6f0;
        padding: 0.75rem 1.25rem;
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
        height: calc(1.5em + 0.75rem + 2px);
    }

    .input-group-text {
        background-color: #f8f9fc;
        border-color: #d1d3e2;
        padding: 0.5rem 0.75rem;
    }

    .btn {
        border-radius: 0.375rem;
        padding: 0.375rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .form-container {
        padding: 2.5rem 1.5rem 0;
        background-color: #ededed !important;
    }

    h1 {
        color: white !important;
        margin-left: 19%;
    }

    .container {
        margin-top: 7%;
    }
</style>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4 mb-0 text-gray-800">Edit Certificate</h1>
    </div>

    <div class="card shadow">
        <div class="card-header">
            <h6 class="m-0 fw-bold">Update Certificate Details</h6>
        </div>

        <div class="form-container">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label small fw-bold">Certificate Type</label>
                            <select asp-for="Name" class="form-control">
                                <option value="Gold">Gold</option>
                                <option value="Silver">Silver</option>
                                <option value="Bronze">Bronze</option>
                            </select>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Duration" class="form-label small fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Duration" class="form-control" placeholder="Duration" />
                            </div>
                            <span asp-validation-for="Duration" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="InterestRate" class="form-label small fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="InterestRate" class="form-control" placeholder="Interest rate" />
                            </div>
                            <span asp-validation-for="InterestRate" class="text-danger small"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Amount" class="form-label small fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="Amount" class="form-control" placeholder="Minimum amount" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left mr-1 pe-1"></i> Back
                        </a>
                        <button type="submit" class="btn btn-dark">
                            <i class="fas fa-save mr-1 pe-1"></i> Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
