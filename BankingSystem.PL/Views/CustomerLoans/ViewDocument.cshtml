@model BankingSystem.DAL.Models.FinancialDocument

@{
    ViewData["Title"] = "View Financial Document";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Financial Document Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Issue Date
        </dt>
        <dd class="col-sm-10">
            @Model.IssueDate.ToString("d")
        </dd>
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.FileName
        </dd>
        <dt class="col-sm-2">
            Document Type
        </dt>
        <dd class="col-sm-10">
            @Model.DocumentType
        </dd>
    </dl>
    <a asp-action="DownloadDocument" asp-route-id="@Model.Id" class="btn btn-primary">Download Document</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>